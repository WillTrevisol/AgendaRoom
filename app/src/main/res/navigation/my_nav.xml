<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/contactsListFragment" >

    <fragment
        android:id="@+id/contactsListFragment"
        android:name="br.edu.ifsp.agendaroom.ui.ContactsListFragment"
        android:label="Contacts"
        tools:layout="@layout/fragment_contacts_list" >
        <action
            android:id="@+id/actionContactsListToRegister"
            app:destination="@id/contactRegisterFragment" />
        <action
            android:id="@+id/actionContactsListToContactDetail"
            app:destination="@id/contactDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/contactRegisterFragment"
        android:name="br.edu.ifsp.agendaroom.ui.ContactRegisterFragment"
        android:label="New contact"
        tools:layout="@layout/fragment_contact_register" />
    <fragment
        android:id="@+id/contactDetailFragment"
        android:name="br.edu.ifsp.agendaroom.ui.ContactDetailFragment"
        android:label="Contact details"
        tools:layout="@layout/fragment_contact_detail" />

</navigation>